<%= form_with(model: job) do |form| %>
  <% if job.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% job.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <card class="card">
    <legend class="centered card-header">Enter New Data Below</legend>
    <div class="card-body">
      <div>
        <%= form.label :job_code, style: "display: block" %>
        <%= form.number_field :job_code %>
      </div>

      <div>
        <%= form.label :job_group, style: "display: block" %>
        <%= form.text_field :job_group %>
      </div>

      <div>
        <%= form.label :job_subgroup, style: "display: block" %>
        <%= form.text_field :job_subgroup %>
      </div>

      <div>
        <%= form.label :job_name, style: "display: block" %>
        <%= form.text_field :job_name %>
      </div>

      <div>
        <%= form.label :job_level, style: "display: block" %>
        <%= form.text_field :job_level %>
      </div>

      <div>
        <%= form.label :technical, style: "display: block" %>
        <%= form.check_box :technical %>
      </div>
    </div>  
    <div class="card-footer centered">
      <%= form.button 'Submit', :class => "btn btn-success" %>
      <%= link_to 'Back to Jobs list', jobs_path, class:"btn btn-primary" %>
    </div>
  </card>    
<% end %>
