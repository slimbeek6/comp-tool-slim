<p style="color: green"><%= notice %></p>

<h1 class="header centered">Jobs List</h1>
<br/>

<form class="form">
  <input type="text" placeholder="Filter by Group" name="group"></input>
  <button type="submit">Search</button>
</form>

<br/>

<table id = "jobs" class="table table-striped table-bordered table-hover">
  <thead class="thead centered">
    <tr>
      <th>Job Code</th>
      <th>Job Group</th>
      <th>Job Sub-Group</th>
      <th>Job Name</th>
      <th>Job Level</th>
      <th>Technical?</th>
      <th colspan="3">Manage</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.job_code %></td>
        <td><%= job.job_group %></td>
        <td><%= job.job_subgroup %></td>
        <td><%= job.job_name %></td>
        <td class="centered"><%= job.job_level %></td>
        <td class="centered"><%= job.technical %></td>
        <td class="centered"><%= link_to "Show", job %></td>
        <td class="centered"><%= link_to 'Edit', edit_job_path(job) %></td>
        <td class="centered"><%= link_to 'Destroy', method: :delete, data: { confirm: 'Are you sure?' } %></td>        
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New job", new_job_path, class:"btn btn-secondary" %>
