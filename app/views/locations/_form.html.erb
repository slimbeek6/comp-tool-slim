<%= form_with(model: location) do |form| %>
  <% if location.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
        <% location.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
  <card class="card">
    
    <legend class="centered card-header">Enter New Data Below</legend>

    <div class="card-body">
      <div>
        <%= form.label :country, style: "display: block", class: "form-label" %>
        <%= form.text_field :country, class: "form-control" %>
      </div>
      
      <br/>

      <div>
        <%= form.label :city, style: "display: block", class: "form-label" %>
        <%= form.text_field :city, class: "form-control" %>
      </div>

      <br/>

      <div>
        <%= form.label :location_code, style: "display: block", class: "form-label" %>
        <%= form.text_field :location_code, class: "form-control" %>
      </div>

      <br/>

      <div>
        <%= form.label :salary_band, style: "display: block", class: "form-label" %>
        <%= form.text_field :salary_band, class: "form-control" %>
      </div>

      <br/>

      <div>
        <%= form.label :equity_band, style: "display: block", class: "form-label" %>
        <%= form.text_field :equity_band, class: "form-control" %>
      </div>
    </div>
    <div class="card-footer centered">
      <%= form.button 'Submit', :class => "btn btn-success" %>
      <%= link_to 'Back to Locations list', locations_path, class:"btn btn-primary" %>
    </div>
  </card>
<% end %>
