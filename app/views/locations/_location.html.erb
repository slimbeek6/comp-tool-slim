<div id="<%= dom_id location %>" class="card">
  <h3 class="card-header centered">Current Location</h3>
  <div class="card-body">
    <p>
      <strong>Country:</strong>
      <%= location.country %>
    </p>

    <p>
      <strong>City:</strong>
      <%= location.city %>
    </p>

    <p>
      <strong>Location code:</strong>
      <%= location.location_code %>
    </p>

    <p>
      <strong>Salary band:</strong>
      <%= location.salary_band %>
    </p>

    <p>
      <strong>Equity band:</strong>
      <%= location.equity_band %>
    </p>
  </div>

  <div class="card-footer row " style="--bs-gutter-x: 0">
    <div class="col-4"><%= button_to "Edit this location", edit_location_path(@location), class:"btn btn-primary"%></div>      
    <div class="col-4"><%= button_to "Back to locations", locations_path, class:"btn btn-secondary" %></div>
    <div class="col-4"><%= button_to "Destroy this location", @location, method: :delete, class:"btn btn-danger" %></div>
  </div>
</div>
